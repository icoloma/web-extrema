extends ../layouts/layout

append content
  .container-fluid.training
    ul.thumbnails.row-fluid.courses
      li.span4.javaspecialists
        a(href="/courses#javaspecialists").thumbnail
          .caption
            h4 Javaspecialists
            p !{__('javasp-thumb')}
      li.span4.html5
        a(href="/courses#HTML5").thumbnail
          .caption
            h4 HTML5 and CSS3
            p !{__('HTML5-thumb')}
      li.span4.spring
        a(href="/courses#spring").thumbnail
          .caption
            h4 Spring
            p !{__('spring-thumb')}
  .row-fluid.clients
    .span12
      span.client-accenture Accenture
      span.client-aena AENA
      span.client-atos Atos
      span.client-bbva BBVA
      span.client-bde Banco de España
      span.client-carrefour Carrefour
      span.client-corteingles El Corte Inglés
      span.client-everis Everis
      span.client-iberdrola Iberdrola
      span.client-icm ICM
      span.client-indra INDRA
      span.client-mapfre Mapfre
      span.client-telefonica Telefónica

append head
  //if lte IE 8
    style
      .javaspecialists {
        background: url(../images/sprite-cursos.png) no-repeat 50% 0px;
      }

      .html5 {
        background: url(../images/sprite-cursos.png) no-repeat 50% -120px;
      }

      .spring {
        background: url(../images/sprite-cursos.png) no-repeat 50% -240px;
      }