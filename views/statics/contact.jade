extends ../layouts/layout

append content
  -var alert, fields
  .container-fluid
    .row-fluid
      .span8
        h1 !{__('Contact')}
        p !{__('required-fields')}
        -if(alert) {
          .alert.alert-danger
            p !{alert}
        -}
        script(type="text/javascript")
          var RecaptchaOptions = {
            theme : 'white',
          };
        form(method="post", action="/contact").contact-form
          .control-group
            label !{__('Name')}:
            input(type="text", name="name", value=(fields && fields.name || false))
          .control-group
            label !{__('Organization')}:
            input(type="text", name="organization", value=(fields && fields.organization || false))
          -var required = '<span class="required" title="' + __('required') + '">*</span>'
          .control-group
            label 
              | Email: 
              | !{required}
            input(type="email", required, name="email", value=(fields && fields.email || false))
          .control-group
            label 
              | !{__('Comment')}:
              | !{required}
            textarea(required, name="comment", rows=10) !{fields && fields.comment || ''}

          .control-group
            label Captcha
            p !{__('captcha-please')}
            script(type='text/javascript', src='http://www.google.com/recaptcha/api/challenge?k=6LcjZdMSAAAAAM6BSZH_hjej4enmL1KmSyPq5VrP')
      
            noscript
              iframe(src='http://www.google.com/recaptcha/api/noscript?k=your_public_key', height='300', width='500', frameborder='0')
              br
              textarea(name='recaptcha_challenge_field', rows='3', cols='40')
              input(type='hidden', name='recaptcha_response_field', value='manual_challenge')

          button(type="submit") !{__('Submit')}
      .span4.contact-data(itemscope, itemtype="http://schema.org/Corporation")
        .alert.alert-details
          h2.alert-heading Madrid
          h4 
            | <i class="icon-road"></i>
            | Extrema Sistemas S.L.
          address(itemprop="address", itemscope, itemtype="http://schema.org/PostalAddress")
            p(itemprop="streetAddress") C/Casas de Miravete 24A<br />
            span(itemprop="postalCode") 28031 
            span(itemprop="addressCountry") Madrid
          h4
            | <i class="icon-th"></i>
            |!{__('Phone')} 
            span(itemprop="telephone") (+34) 91 172 7081
          hr
          h2.alert-heading !{__('Italy')}
          h4 
            | <i class="icon-th"></i>
            | !{__('Phone')} 
            span(itemprop="telephone") (+39) 06 929 56 158
          hr
          h2.alert-heading Email
          h4 
            | <i class="icon-envelope"></i> 
            a(href="mailto:info@extrema-sistemas.com",
              title=__('Email-to') + ": info@extrema-sistemas.com",
              itemprop="email") info@extrema-sistemas.com
          hr
          h4.join-us !{__('Join-us')}
          -var linkCV = '<a href="mailto:team@extrema-sistemas.com" class="email" title="' + __('Send-CV') + ': team@extrema-sistemas.com">team@extrema-sistemas.com</a>'
          p  
            | !{__('Join-us-p')}
            | !{linkCV}