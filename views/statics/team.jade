extends ../layouts/layout


include ../includes/team-member

append content
  -var members = items
  .container-fluid
    .row-fluid
      .about(itemscope, itemtype="http://schema.org/Corporation").well.span12
        h2 !{__('About us')}
        .details
          img(src="/images/logo-extrema.png", itemprop="image")
          ul.sociallinks
            li.twitterlink
              a(href="http://twitter.com/extremasistemas") Twitter
            li.wordpresslink
              a(href="http:blog.extrema-sistemas.com") Blog
        p(itemprop="description") !{__('about-us-p1')}
    .team-members
      -for(var i = 0; i < members.length; i += 2) {
        .row-fluid
          -var member = members[i]
            .span6.team-member(itemscope, itemtype="http://schema.org/Person")
              mixin teamMember(member)
            -if(members[i+1])
              -var member = members[i+1]
              .span6.team-member(itemscope, itemtype="http://schema.org/Person")
                mixin teamMember(member)
      -}
  -if(user) {
  a(href="/team/new").btn New
  -}
