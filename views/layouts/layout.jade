include ../includes/navbar-mixins

!!!
html
  block head
    head
      title= title

      meta(charset="utf-8")

      meta(name="viewport", content="width=device-width, initial-scale=1.0")

      link(rel='stylesheet', href='/stylesheets/bootstrap.css')
      link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
      link(rel='stylesheet', href='/stylesheets/style.css')
      -if(user) {
      link(rel='stylesheet', href='/stylesheets/admin-style.css')
      -}

  body
    header
      div.logo
        a(href="/") Extrema
      .navbar
        .navbar-inner
          .container
            a#btn-toggle(data-toggle="collapse", data-target=".nav-collapse") !{__('show-navbar')}
            .nav-collapse.wrapper
              ul.nav.main-list
                -var selected
                mixin navbarLink(selected, '/', 'Home')
                mixin navbarLink(selected, '/courses', 'Training')
                mixin navbarLink(selected, '/team', 'Team')
                mixin navbarLink(selected, '/follow-us', 'Follow-us')
              -if (user) {
                ul.nav.pull-right
                  li
                    a(href="/logout") Logout
              -}
              mixin langDropdown(lang)
    .wrapper
      block content

    footer
      .wrapper
        a(href='/contact') !{__('Contact')}
      .navbar.visible-phone
        .navbar-inner
          .container
            ul.nav.main-list
              li
                a(href='/') !{__('Home')}
              li
                a(href='/team') !{__('Team')}
              li
                a(href='/follow-us') !{__('Follow-us')}
              mixin langPills(lang)
              -if (user) {
                ul.nav.pull-right
                  li
                    a(href="/logout") Logout
              -}
                

block scripts
  script(type="text/javascript", src="/javascripts/jquery-1.7.2.min.js")
  script(type="text/javascript", src="/javascripts/bootstrap-dropdown.js")
  script(type="text/javascript", src="/javascripts/bootstrap-collapse.js")
  script(type="text/javascript", src="/javascripts/bootstrap-tab.js")

