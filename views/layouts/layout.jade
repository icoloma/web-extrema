include ../includes/navbar-mixins

!!!
html
  head
    block head
      title= title

      meta(charset="utf-8")

      meta(name="viewport", content="width=device-width, initial-scale=1.0")

      !{stylesheetsMixin()}

      -if(user) {
        link(rel='stylesheet', href='/stylesheets/admin-style.css')
      -}
      script(src="/javascripts/modernizr-touch.min.js")

  body
    header
      div.logo
        a(href="/") Extrema
      .navbar
        .navbar-inner
          .container
            a.btn-toggle(data-toggle="collapse", data-target=".nav-collapse") !{__('show-navbar')}
            .nav-collapse.wrapper
              ul.nav.main-list
                -var selected
                mixin navbarLink(selected, '/', 'Home')
                mixin navbarLink(selected, '/courses', 'Training')
                mixin navbarLink(selected, '/team', 'Team')
                mixin navbarLink(selected, '/follow-us', 'Follow-us')
              mixin langDropdown(lang)
              ul.nav.pull-right
                li
                  a(href="/contact") !{__('Contact')}
              -if (user) {
                mixin navbarControls
              -}
    .wrapper
      block content

    footer
      .navbar.visible-phone
        .navbar-inner
          .container
            ul.nav.main-list
              mixin navbarLink(selected, '/', 'Home')
              mixin navbarLink(selected, '/courses', 'Training')
              mixin navbarLink(selected, '/team', 'Team')
              mixin navbarLink(selected, '/follow-us', 'Follow-us')
              li
                a(href="/contact") !{__('Contact')}
            mixin langPills(lang)
            -if (user) {
              mixin navbarControls
            -}
                

    block scripts
      !{javascriptsMixin()}
    script
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2309405-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
