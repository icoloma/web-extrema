-var members = items
.main.container-fluid
  .about
    h2 !{__('About us')}
    p !{__('about-us-p1')}
    p !{__('about-us-p3')}
    p !{__('about-us-p3')}
  .team
    .row-fluid
      .span6
        h2 IT team
        ul.team-members.IT
          -for(i in members) {
            -var member = members[i]
            -if(member.type === 'IT')
              include ./includes/team-member
          -}
      .span6
        h2 Management team
        ul.team-members.management
          -for(i in members) {
            -var member = members[i]
            -if(member.type === 'Management')
              include ./includes/team-member
          -}
-if(user) {
a(href="/team/new").btn New

a(href="/admin").btn Back
-}