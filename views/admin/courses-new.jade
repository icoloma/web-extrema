form(method="post", action="/courses/add",enctype="multipart/form-data").form-horizontal
  .row-fluid
    .span6
      .control-group
        label Name
        input(type="text", name="name", required)
    .span6
      .control-group
        label Picture
        input(type="file", name="picture")
      .control-group
        label Description (english)
        textarea(name="description_en", style="resize:vertical")
      .control-group
        label Description (spanish)
        textarea(name="description_es", style="resize:vertical")
  div
    button(type="submit").btn.btn-info Submit
    a(href="/courses").btn.btn-warning Cancel
