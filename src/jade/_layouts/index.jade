extends default
block i18n
  - title = Home
block content
  .row.section
    section.columns
      hgroup
        h1 #{indexTrainingTitle}
          small #{indexTrainingDesc}
      div
        ul.unstyled.training
          mixin courseArticle(href, logo, title, desc, partnerDesc)
            li.row
              article.training-container
                div.column.small-12.medium-3.training-logo-container.logo-container.text-center
                  a(href=href)
                    img.training-logo(src="/img/logo-" + logo + ".png", alt=title, class=logo)
                div.column.small-12.medium-9
                  h4.small-only-text-center 
                    a(href=href) #{title}
                  p !{desc}
                    a.nobreak(href=href) <span class="icon-right-open"></span> #{readMore}
                  if partnerDesc
                    p.partner 
                      span.icon.icon-star 
                      | !{partnerDesc}
          +courseArticle("/" + currentLang + "/courses#google", "gcp", "Google Cloud Platform", googleCloudPlatformDesc, googleTrainingPartner)
          +courseArticle("/" + currentLang + "/courses#spring", "spring", "Spring", springDesc, springCertifiedPartner)
          +courseArticle("/" + currentLang + "/courses#html5", "html5", "HTML5 & CSS3", html5ShortDesc)
          +courseArticle("/" + currentLang + "/courses#groovy", "grails", "Groovy & Grails", groovyAndGrailsDesc)

  hr
  .row
    section.column.small-12
      h1 #{consultingTitle}
      p.consulting-desc #{consultingDesc}
      .hide
        include ../_include/case-studies
      ul.unstyled.studies-container
      a.button.radius(href="/" + currentLang + "/contact") #{getInContact} 
      != " "
      a.button.secondary.radius(href="/" + currentLang + "/studies") <span class="icon-right-open"></span> #{moreCaseStudies}

  hr
  .row
    section.column.small-12.medium-6
      p
        img(src="/img/logo-google-big.png", alt="Google Cloud Platform Training Partner")
    section.column.small-12.medium-6
      p
        img(src="/img/logo-spring-big.png", alt="SpringSource Official Training Partner", style="margin-right: 10px")

  section.clients-section.clearfix
    .column.small-12.text-center
      ul.small-block-grid-3.medium-block-grid-4.large-block-grid-6
        li
          span.client-accenture(title="Accenture") Accenture
        li
          span.client-aena(title="AENA") AENA
        li
          span.client-atos(title="Atos") Atos
        li
          span.client-bbva(title="BBVA") BBVA
        li
          span.client-bde(title="Banco de España") Banco de España
        li
          span.client-carrefour(title="Carrefour") Carrefour
        li
          span.client-corteingles(title="El Corte Inglés") El Corte Inglés
        li
          span.client-united-nations(title="United Nations") United Nations
        li
          span.client-iberdrola(title="Iberdrola") Iberdrola
        li
          span.client-indra(title="INDRA") INDRA
        li
          span.client-mapfre(title="Mapfre") Mapfre
        li
          span.client-movistar(title="Movistar") Movistar